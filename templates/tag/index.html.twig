{% extends 'base.html.twig' %}

{% block title %}Liste des tags{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5">Gestion des tags</h1>
            <p class="text-muted">Consultez et gérez les tags utilisés pour catégoriser les notes</p>
        </div>
        <div class="col-auto d-flex align-items-center">
            <a href="{{ path('app_tag_new') }}" class="btn btn-primary">
                <i class="fas fa-plus-circle me-1"></i> Créer un nouveau tag
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Tags disponibles</h5>
                <span class="badge bg-primary">{{ tags|length }} tag(s)</span>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 80px;">#</th>
                            <th>Nom</th>
                            <th class="text-center" style="width: 200px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for tag in tags %}
                        <tr>
                            <td>{{ tag.id }}</td>
                            <td>
                                {% if tag.couleur %}
                                    <span class="badge me-1" style="background-color: {{ tag.couleur }}">{{ tag.nom }}</span>
                                {% else %}
                                    <span class="badge bg-info text-dark me-1">{{ tag.nom }}</span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_tag_show', {'id': tag.id}) }}" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye me-1"></i> Voir
                                    </a>
                                    <a href="{{ path('app_tag_edit', {'id': tag.id}) }}" class="btn btn-sm btn-outline-secondary">
                                        <i class="fas fa-edit me-1"></i> Modifier
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center py-4">
                                <div class="alert alert-info mb-0">
                                    <i class="fas fa-info-circle me-2"></i>
                                    Aucun tag n'a été trouvé
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <div class="mt-4">
        <a href="{{ path('app_dashboard') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Retour au tableau de bord
        </a>
    </div>
</div>
{% endblock %}
