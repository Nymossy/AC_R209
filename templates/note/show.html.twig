{% extends 'base.html.twig' %}

{% block title %}Note{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Note</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ note.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ note.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ note.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ note.createdAt ? note.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndAt</th>
                <td>{{ note.endAt ? note.endAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Priorite</th>
                <td>{{ note.priorite }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mb-3">
        <a href="{{ path('app_note_index') }}" class="btn btn-outline-secondary">Retour à la liste</a>
        <a href="{{ path('app_note_edit', {'id': note.id}) }}" class="btn btn-primary">Modifier</a>
        {{ include('note/_delete_form.html.twig') }}
    </div>

    <!-- Section pour les images associées -->
    {% if note.galeries is defined and note.galeries|length > 0 %}
        <div class="card mt-4">
            <div class="card-header">Images associées</div>
            <div class="card-body">
                <div class="row">
                    {% for galerie in note.galeries %}
                        <div class="col-md-3 mb-3">
                            <a href="{{ path('app_galerie_show', {'id': galerie.id}) }}">
                                <img src="{{ asset('Images/' ~ galerie.filePath) }}" class="img-thumbnail" alt="{{ galerie.nom }}">
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
