{% extends 'base.html.twig' %}

{% block title %}{{ galerie.nom }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <img src="{{ asset('Images/' ~ galerie.filePath) }}" class="img-fluid rounded" alt="{{ galerie.nom }}">
        </div>
        <div class="col-md-4">
            <h2>{{ galerie.nom }}</h2>
            
            <div class="mt-4">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th>Note associée</th>
                            <td>
                                <a href="{{ path('app_note_show', {'id': galerie.noteLiaison.id}) }}">
                                    {{ galerie.noteLiaison.titre }}
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <th>Taille</th>
                            <td>{{ (galerie.fileSize / 1024)|round }} KB</td>
                        </tr>
                        <tr>
                            <th>Ajoutée le</th>
                            <td>{{ galerie.uploadAt|date('d/m/Y H:i') }}</td>
                        </tr>
                        <tr>
                            <th>Ajoutée par</th>
                            <td>{{ galerie.uploadBy.email }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            
            <div class="mt-4 d-flex gap-2">
                <a href="{{ path('app_galerie_edit', {'id': galerie.id}) }}" class="btn btn-primary">Modifier</a>
                <a href="{{ path('app_galerie_index') }}" class="btn btn-outline-secondary">Retour à la galerie</a>
                <form method="post" action="{{ path('app_galerie_delete', {'id': galerie.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette image?');" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ galerie.id) }}">
                    <button class="btn btn-outline-danger">Supprimer</button>
                </form>
            </div>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Images associées</h5>
            <a href="{{ path('app_galerie_new') }}" class="btn btn-sm btn-outline-primary">Ajouter une image</a>
        </div>
        <div class="card-body">
            {% if note.galeries|length > 0 %}
                <div class="row">
                    {% for galerie in note.galeries|slice(0, 4) %}
                        <div class="col-md-3 mb-3">
                            <a href="{{ path('app_galerie_show', {'id': galerie.id}) }}">
                                <img src="{{ asset('uploads/images/' ~ galerie.filePath) }}" class="img-thumbnail" alt="{{ galerie.nom }}">
                            </a>
                        </div>
                    {% endfor %}
                </div>
                
                {% if note.galeries|length > 4 %}
                    <div class="text-center mt-3">
                        <a href="{{ path('app_note_galerie', {'id': note.id}) }}" class="btn btn-outline-primary">
                            Voir toutes les images ({{ note.galeries|length }})
                        </a>
                    </div>
                {% endif %}
            {% else %}
                <p class="text-muted">Aucune image associée à cette note.</p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
